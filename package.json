{
	"name": "bch-mcp-server",
	"version": "1.0.0",
	"description": "Bitcoin Cash MCP Server powered by mainnet-js",
	"main": "dist/index.js",
	"module": "./src/index.ts",
	"type": "module",
	"scripts": {
		"build": "esbuild src/server.ts --bundle --platform=node --format=esm --outfile=dist/index.js --packages=external",
		"start": "node dist/index.js",
		"dev": "node --loader ts-node/esm src/server.ts"
	},
	"keywords": [
		"bitcoin-cash",
		"bch",
		"mcp",
		"model-context-protocol"
	],
	"author": "nickthelegend",
	"license": "MIT",
	"dependencies": {
		"@mainnet-cash/contract": "^2.7.31",
		"@modelcontextprotocol/sdk": "^1.25.1",
		"mainnet-js": "^2.7.31",
		"qrcode-svg": "^1.1.0",
		"zod": "^4"
	},
	"devDependencies": {
		"esbuild": "^0.27.2",
		"typescript": "^5.3.3"
	}
}